#disableStripeModal.modal{'aria-hidden' => 'true', 'aria-labelledby' => "disableStripeLabel", 'data-backdrop' => 'static', role: :dialog, tabindex: '-1'}
  .modal-dialog{role: :document}
    .modal-content
      .modal-header
        %h2.modal-title{id: 'disableStripeLabel'}
          Disable Stripe
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: :button}
          %span{'aria-hidden' => 'true'} Ã—
      .modal-body
        = t("admin.payment_preferences.confirm_disable", gateway: 'STRIPE')
        %br
      .modal-footer
        = link_to t('admin2.cancel'), '#', class: %i[cancel-modal], 'data-dismiss': :modal
        = link_to t('admin2.stripe.disable_stripe'), disable_admin2_payment_system_stripe_path(payment_gateway: :stripe), method: :patch, class: %i[btn btn-primary]